<h2>

<h1>Edit Review for <%= @restaurant[:restaurant_name] %></h1>
<p><%= @restaurant[:adress] %></p>
</h2>

<form action="/restaurants/<%= @restaurant[:id] %>/update" method="post">
  <div class="form-group">

    <label>How good was the food?</label>
    <select class="form-control" name="taste">
    <% if @review[:taste] ==1 %>
        <option value=1 selected>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    <% elsif @review[:taste] ==2 %>
        <option value=1>1</option>
        <option value=2 selected>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    <% elsif @review[:taste] ==3 %>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3 selected>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
     <% elsif @review[:taste] ==4 %>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4 selected>4</option>
        <option value=5>5</option>
    <% elsif @review[:taste] ==5 %>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5 selected>5</option>
    <% end %>
        </select>  

    <label>How clean was the place?</label>
    <select class="form-control" name="cleanliness">
    <% if @review[:cleanliness] ==1 %>
        <option value=1 selected>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    <% elsif @review[:cleanliness] ==2 %>
        <option value=1>1</option>
        <option value=2 selected>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    <% elsif @review[:cleanliness] ==3 %>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3 selected>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
     <% elsif @review[:cleanliness] ==4 %>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4 selected>4</option>
        <option value=5>5</option>
