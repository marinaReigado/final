        <option value=4>4</option>
        <option value=5 selected>5</option>
    <% end %>
        </select>  
        
    <label>How much, in dolars, did you spend per person?</label>
    <input type="integer" class="form-control" placeholder=<%= @review[:price] %> name="price">

  </div>

  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"><%= @review[:comments] %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

